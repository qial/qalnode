doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block body
      div.account
        block account
          span.login
            a(href='/')= 'Login'
      div.title
        h1= title
      div.content
        block content
          div.reminders
            block reminders
              p= 'Reminders'
          div.events
            block events
              p= 'Event listing'
          div.menu
            block menu
              p= 'Base menu'

